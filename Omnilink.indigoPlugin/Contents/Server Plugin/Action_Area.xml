<Action id="checkSecurityCode" deviceFilter="self.omniAreaDevice">
  <Name>Validate a Security Code</Name>
  <CallbackMethod>checkSecurityCode</CallbackMethod>
  <ConfigUI>
    <Field id="info" type="label">
      <Label>Enter the security code to validate with your Omni controller. Results will be stored in the Controller Device Custom States:</Label>
    </Field>
    <Field id="code" type="textfield">
      <Label>Four Digit Code:</Label>
    </Field>
    <Field id = "sep" type = "separator"/>
    <Field id = "explanation" type="label">
      <Label>Variable and device substitution markup (%%v:VARIABLEID%% and  %%d:DEVICEID:STATEKEY%%) work in the above field.</Label>
    </Field>
    <Field id = "actionVersion" type="textfield" defaultValue="0.4.0" hidden="true"/>
  </ConfigUI>
</Action>
<Action id="armSecuritySystem" deviceFilter="self.omniAreaDevice">
  <Name>Arm or Disarm Area</Name>
  <CallbackMethod>armSecuritySystem</CallbackMethod>
  <ConfigUI>
    <Field id="info" type="label">
      <Label>Choose the arming mode:</Label>
    </Field>
    <Field id="mode" type="menu">
      <Label>Mode:</Label>
      <List class="self" filter="" method="generateModeList"/>
    </Field>
    <Field id="info2" type="label">
      <Label>Enter the user number from Set Up Codes. Do not enter the 4 digit user code:</Label>
    </Field>
    <Field id="user" type="textfield">
      <Label>User Number:</Label>
    </Field>
    <Field id = "sep" type = "separator"/>
    <Field id = "explanation" type="label">
      <Label>Variable and device substitution markup (%%v:VARIABLEID%% and %%d:DEVICEID:STATEKEY%%) work in the user number field.</Label>
    </Field>
    <Field id = "actionVersion" type="textfield" defaultValue="0.4.0" hidden="true"/>
  </ConfigUI>
</Action>
