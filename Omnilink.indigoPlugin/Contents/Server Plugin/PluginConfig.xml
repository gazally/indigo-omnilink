<?xml version="1.0"?>
<PluginConfig>
  <SupportURL>http://github.com/gazally/indigo-omnilink</SupportURL>
  <Field id="explanation" type="label">
    <Label>Please enter the following information from the Setup menu on your Omni system keypad:"</Label>
  </Field>
  <Field id="ipAddress" type="textfield">
    <Label>IP Address:</Label>
  </Field>
  <Field id="portNumber" type="textfield">
    <Label>Port:</Label>
  </Field>
  <Field id="encryptionKey1" type="textfield">
    <Label>Encryption Key Part 1:</Label>
  </Field>
  <Field id="encryptionKey2" type="textfield">
    <Label>Encryption Key Part 2:</Label>
  </Field>
  <Field id="sep2" type="separator"/>
  <Field id="showDebugInfo" type="checkbox" defaultValue="false">
    <Label>Enable plugin debug logging:</Label>
    <Description>(not recommended)</Description>
  </Field>
  <Field id="configVersion" type="textfield" hidden="true" defaultValue="0.1.0">
    <Label>Hidden config version</Label>
  </Field>
